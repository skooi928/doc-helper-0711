{
  "name": "doc-helper-0711",
  "displayName": "Doc Helper",
  "description": "AI assistant to documentation.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "AI", "Snippets", "Other"
  ],
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "keybindings": [
      {
        "key": "ctrl+alt+l",
        "command": "doc-helper-0711.toggleLink",
        "when": "editorTextFocus && editorLangId == markdown"
      },
      {
        "key": "ctrl+alt+g",
        "command": "doc-helper-0711.toggleGhostSuggestion",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "doc-helper-0711",
          "title": "Doc Helper",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "doc-helper-0711": [
        {
          "id": "doc-helper-init",
          "name": "Initialization",
          "icon": "resources/icon.svg",
          "when": "!docHelper:dochInitialized"
        },
        {
          "id": "doc-helper-tasks",
          "name": "Task Tracker",
          "icon": "$(checklist)",
          "when": "docHelper:dochInitialized"
        },
        {
          "id": "doc-helper-chatbot",
          "name": "AI Chatbot",
          "type": "webview",
          "icon": "resources/icon.svg",
          "when": "docHelper:dochInitialized"
        }
      ],
      "explorer": [
        {
          "id": "doc-helper-stats",
          "name": "Doc Helper: Stats",
          "icon": "resources/icon.svg",
          "when": "docHelper:dochInitialized"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "doc-helper-init",
        "contents": "In order to use DocHelper, you can open a folder containing a .doch repository. (A .doch folder will be automatically generated if no prior folder was found.)\n[Open Folder](command:vscode.openFolder)\nTo learn more about how to use DocHelper and version control in VS Code [read our docs](https://aka.ms/vscode-scm).",
        "when": "workspaceFolderCount == 0"
      },
      {
        "view": "doc-helper-init",
        "contents": "This current folder has no .doch repository. To create a documentation tracking, click on the button below.\n[Init .doch Repository](command:doc-helper-0711.initDochRepo)",
        "when": "workspaceFolderCount != 0"
      }
    ],
    "commands": [
      {
        "command": "doc-helper-0711.initDochRepo",
        "title": "Doc Helper: Initialize DocHelper Repository"
      },
      {  
        "command": "doc-helper-0711.statusBarMenu",
        "title": "Doc Helper: Status Bar Menu"
      },
      {
        "command": "doc-helper-0711.refreshFileStatus",
        "title": "Doc Helper: Refresh File Status"
      },
      {
        "command": "doc-helper-0711.generateDoc",
        "title": "Generate Documentation",
        "icon": "$(request-changes)"
      },
      {
        "command": "doc-helper-0711.generateDocFromSelection",
        "title": "Generate Selected Documentation",
        "icon": "$(request-changes)"
      },
      {
        "command": "doc-helper-0711.summarizeDoc",
        "title": "Summarize Documentation",
        "icon": "$(sparkle)"
      },
      {
        "command": "doc-helper-0711.checkDocIssue",
        "title": "Check Documentation Issues",
        "icon": "$(alert)"
      },
      {
        "command": "doc-helper-0711.checkSelectedDocIssues",
        "title": "Check Selected Documentation Issues",
        "icon": "$(alert)"
      },
      {
        "command": "doc-helper-0711.addTask",
        "title": "Add New Task",
        "icon": "$(add)"
      },
      {
        "command": "doc-helper-0711.toggleTask",
        "title": "Toggle Task Completion"
      },
      {
        "command": "doc-helper-0711.editTask",
        "title": "Edit Task",
        "icon": "$(edit)"
      },
      {
        "command": "doc-helper-0711.deleteTask",
        "title": "Delete Task",
        "icon": "$(trash)"
      },
      {
        "command": "doc-helper-0711.jumpToTaskFile",
        "title": "Jump to File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "doc-helper-0711.sortTasksByPriority",
        "title": "Sort Tasks by Priority",
        "icon": "$(list-ordered)"
      },
      {
        "command": "doc-helper-0711.sortTasksByCreation",
        "title": "Sort Tasks by Creation Order",
        "icon": "$(calendar)"
      },
      {
        "command": "doc-helper-0711.sortTasksAlphabetically",
        "title": "Sort Tasks Alphabetically",
        "icon": "$(symbol-text)"
      },
      {
        "command": "doc-helper-0711.sortTasksByStatus",
        "title": "Sort Tasks by Status",
        "icon": "$(check-all)"
      },
      {
        "command": "doc-helper-0711.sortTasksByDeadline",
        "title": "Sort Tasks by Deadline",
        "icon": "$(watch)"
      },
      {
        "command": "doc-helper-0711.toggleTaskSort",
        "title": "Choose Task Sort Mode",
        "icon": "$(list-filter)"
      },
      {
        "command": "doc-helper-0711.searchFile",
        "title": "Search File",
        "icon": "$(search)"
      },
      {
        "command": "doc-helper-0711.ignoreFile",
        "title": "Ignore File",
        "icon": "$(eye-closed)"
      },
      {
        "command": "doc-helper-0711.openFile",
        "title": "Open File"
      },
      {
        "command": "doc-helper-0711.openRespectiveDocs",
        "title": "Open Respective Code/Docs",
        "icon": "$(book)"
      },
      {
        "command": "doc-helper-0711.toggleLink",
        "title": "Toggle Link Mode"
      },
      {
        "command": "doc-helper-0711.toggleGhostSuggestion",
        "title": "Toggle Ghost Suggestion"
      },
      {
        "command": "doc-helper-0711.insertMissingDocs",
        "title": "Insert Current Missing Documentation Section"
      },
      {
        "command": "doc-helper-0711.insertAllMissingDocs",
        "title": "Insert All Missing Documentation Sections"
      },
      {
        "command": "doc-helper-0711.ignoreMissingDocs",
        "title": "Ignore Documentation Warnings"
      },
      {
        "command": "doc-helper-0711.fixMissingNumber",
        "title": "Fix Missing Numbering"
      },
      {
        "command": "doc-helper-0711.fixDuplicateNumber",
        "title": "Fix Duplicate Numbering"
      },
      {
        "command": "doc-helper-0711.renumberAllHeadings",
        "title": "Renumber All Headings"
      },
      {
        "command": "doc-helper-0711.reportIssue",
        "title": "Doc Helper: Report Issue"
      }
    ],
    "commandPalette": [
      {
        "command": "doc-helper-0711.initDochRepo",
        "when": "docHelper:dochInitialized == false",
        "category": "Doc Helper"
      },
      {
        "command": "doc-helper-0711.refreshFileStatus",
        "when": "docHelper:dochInitialized == true",
        "category": "Doc Helper"
      },
      {
        "command": "doc-helper-0711.reportIssue",
        "when": "docHelper:dochInitialized == true",
        "category": "Doc Helper"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "doc-helper-0711.generateDoc",
          "when": "view == doc-helper-stats && viewItem == Undocumented",
          "group": "inline"
        },
        {
          "command": "doc-helper-0711.generateDocFromSelection",
          "when": "view == doc-helper-stats && viewItem == category.undocumented",
          "group": "inline"
        },
        {
          "command": "doc-helper-0711.summarizeDoc",
          "when": "view == doc-helper-stats && viewItem == Documented-md",
          "group": "inline"
        },
        {
          "command": "doc-helper-0711.checkDocIssue",
          "when": "view == doc-helper-stats && (viewItem == Documented-md || viewItem == Out-of-Date-md)",
          "group": "inline"
        },
        {
          "command": "doc-helper-0711.checkSelectedDocIssues",
          "when": "view == doc-helper-stats && viewItem == category.outOfDate || viewItem == category.documented",
          "group": "inline"
        },
        {
          "command": "doc-helper-0711.ignoreFile",
          "when": "view == doc-helper-stats && viewItem != category.undocumented && viewItem != category.outOfDate && viewItem != category.documented && viewItem != category.noSource && viewItem != category.independent",
          "group": "inline@0"
        },
        {
          "command": "doc-helper-0711.editTask",
          "when": "view == doc-helper-tasks && viewItem == pendingTask",
          "group": "inline@1"
        },
        {
          "command": "doc-helper-0711.deleteTask",
          "when": "view == doc-helper-tasks && (viewItem == pendingTask || viewItem == completedTask)",
          "group": "inline@2"
        },
        {
          "command": "doc-helper-0711.jumpToTaskFile",
          "when": "view == doc-helper-tasks && (viewItem == pendingTask || viewItem == completedTask)",
          "group": "inline@3"
        }
      ],
      "view/title": [
        {
          "command": "doc-helper-0711.searchFile",
          "when": "view == doc-helper-stats",
          "group": "navigation"
        },
        {
          "command": "doc-helper-0711.addTask",
          "when": "view == doc-helper-tasks",
          "group": "navigation@1"
        },
        {
          "command": "doc-helper-0711.toggleTaskSort",
          "when": "view == doc-helper-tasks",
          "group": "navigation@2"
        }
      ],
      "editor/title": [
        {
          "command": "doc-helper-0711.openRespectiveDocs",
          "when": "docHelper:dochInitialized == true",
          "group": "navigation@0"
        }
      ],
      "editor/title/context": [
        {
          "command": "doc-helper-0711.toggleLink",
          "when": "resourceLangId == markdown && docHelper:dochInitialized == true",
          "group": "DocHelper@1"
        }
      ],
      "explorer/context": [
        {
          "command": "doc-helper-0711.toggleLink",
          "when": "resourceLangId == markdown && docHelper:dochInitialized == true",
          "group": "DocHelper@1"
        }
      ],
      "editor/context": [
        {
          "command": "doc-helper-0711.toggleLink",
          "when": "resourceLangId == markdown && docHelper:dochInitialized == true",
          "group": "DocHelper@1"
        },
        {
          "command": "doc-helper-0711.toggleGhostSuggestion",
          "when": "docHelper:dochInitialized == true",
          "group": "DocHelper@2"
        }
      ]
    },
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/snippet.json"
      }
    ],
    "configuration": {
      "title": "Doc Helper",
      "properties": {
        "docHelper.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Key in your own Gemini API Key to access QnA chatbot service"
        },
        "docHelper.huggingFaceToken": {
          "type": "string",
          "default": "",
          "description": "Key in your own Hugging Face API Token to access document processing service"
        },
        "docHelper.saveDirectory": {
          "type": "string",
          "default": "docs/",
          "description": "Default folder path to save all your documentations"
        },
        "docHelper.hyperlinkUnderline": {
          "type": "boolean",
          "default": false,
          "description": "Enable underline for hyperlinking between code and documentation files"
        },
        "docHelper.enableGhostSuggestion": {
          "type": "boolean",
          "default": true,
          "description": "Enable ghost text suggestions for documentation writing"
        }
      }
    }
  },
  "bin": {
    "doch": "./dist/cli.js"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "ignore": "^7.0.5",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.0.3"
  }
}
